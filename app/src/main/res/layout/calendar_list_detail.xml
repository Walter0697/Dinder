<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/calendarType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Breakfast"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/calendarFoodView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/calendarType"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/calendarFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/calendarFoodView"
        android:layout_toEndOf="@+id/calendarFoodView"
        android:layout_marginLeft="15dp"
        android:text="Name"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/calendarCuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calendarFoodName"
        android:layout_below="@+id/calendarFoodName"
        android:text="Cuisine"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/calendarDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calendarFoodName"
        android:layout_below="@+id/calendarCuisine"
        android:text="Duration"
        android:textSize="15dp"/>

    <RatingBar
        android:id="@+id/calendarDifficulty"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calendarFoodName"
        android:layout_below="@+id/calendarDuration"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="1"
        />

    <TextView
        android:id="@+id/calendarCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/calendarDuration"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/calendarDuration"
        android:text="Calorie"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/nullText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calendarCalorie"
        android:layout_toEndOf="@+id/calendarDifficulty"
        android:text="No Recipe" />


</RelativeLayout>