<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/likedRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/likedRecipeAddedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/likedRecipeName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:clickable="true"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_alignTop="@+id/likedRecipeAddedTime"
        android:layout_toStartOf="@+id/removeButton"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:clickable="true"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/likedRecipeAddedTime"
        android:layout_toStartOf="@+id/likedRecipeAddedTime" />
</RelativeLayout>