<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/searchRecipeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/searchRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="Name"
        android:textSize="25dp"
        android:layout_alignTop="@+id/searchRecipeImage"
        android:layout_toEndOf="@+id/searchRecipeImage" />

    <TextView
        android:id="@+id/searchCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchRecipeName"
        android:layout_alignLeft="@+id/searchRecipeName"
        android:text="Calorie"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/searchSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchCalorie"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:clickable="true"/>

</RelativeLayout>