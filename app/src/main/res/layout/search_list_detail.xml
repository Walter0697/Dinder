<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/searchRecipeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/searchRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="Name"
        android:textSize="25dp"
        android:layout_alignTop="@+id/searchRecipeImage"
        android:layout_toEndOf="@+id/searchRecipeImage" />

    <TextView
        android:id="@+id/searchCuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuisine"
        android:textSize="15dp"
        android:layout_below="@+id/searchRecipeName"
        android:layout_alignStart="@+id/searchRecipeName" />

    <TextView
        android:id="@+id/searchDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchCuisine"
        android:layout_alignLeft="@+id/searchCuisine"
        android:text="Duration"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/searchCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchCuisine"
        android:layout_toEndOf="@+id/searchDuration"
        android:layout_marginStart="10dp"
        android:text="Calorie"
        android:textSize="15dp"/>

    <RatingBar
        android:id="@+id/searchDifficulty"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searchCuisine"
        android:layout_below="@+id/searchDuration"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="1" />

</RelativeLayout>